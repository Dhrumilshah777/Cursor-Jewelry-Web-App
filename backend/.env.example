PORT=5000
MONGODB_URI=mongodb://localhost:27017/jewelry-showcase
NODE_ENV=development

# Admin: static key (optional if using Google OAuth)
ADMIN_SECRET=your-secret-key

# Google OAuth for admin login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Comma-separated emails allowed to access admin (e.g. you@gmail.com)
ALLOWED_ADMIN_EMAILS=you@example.com

# URLs (for OAuth redirects; optional, defaults below)
# FRONTEND_URL=http://localhost:3000
# BACKEND_URL=http://localhost:5000

# JWT signing (optional; defaults to ADMIN_SECRET). Use a long random string in production.
# JWT_SECRET=your-jwt-secret
